<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.pmcoffee.android.recyclerpagerdemo" >

    <application
        android:name="com.github.pmcoffee.android.recyclerpagerdemo.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat">
        <activity
            android:name=".widget.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
          android:name=".widget.singleflingdemo.SingleFlingPagerActivity" >
        </activity>
        <activity
          android:name=".widget.verticalpagerdemo.VerticalPagerActivity" >
        </activity>
        <activity
          android:name=".widget.fragmentmaterialdemo.FragmentMaterialDemoActivity"
          android:theme="@style/Theme.DesignDemo">
        </activity>
        <activity
            android:name=".widget.materialdemo.MaterialDemoActivity"
            android:theme="@style/Theme.DesignDemo">
        </activity>
        <activity
            android:name=".widget.TmpActivity"/>
    </application>

</manifest>
